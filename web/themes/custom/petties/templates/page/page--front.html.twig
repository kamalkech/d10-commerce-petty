<!-- Product Detail Section -->
<section class="product-detail">
	<div class="container">
		<div class="product-info">
			<span class="badge">NEW</span>
			<h1 class="product-title">Litter-Robot Self-Cleaning</h1>

			<div class="product-rating">
				<div class="stars">
					<i class="fas fa-star star"></i>
					<i class="fas fa-star star"></i>
					<i class="fas fa-star star"></i>
					<i class="fas fa-star star"></i>
					<i class="fas fa-star-half-alt star"></i>
				</div>
				<span class="reviews-count">4.5 (55,580 reviews)</span>
			</div>

			<div class="product-price">$15.00</div>

			<p class="product-description">
				Experience the ultimate relief from dryness with Sweet Dream's luxurious gel formula. Designed to
				                    penetrate deeply into your skin layers.
			</p>

			<div class="product-colors">
				<div class="color-title">Color</div>
				<div class="color-options">
					<div class="color-option black active"></div>
					<div class="color-option gray"></div>
					<div class="color-option brown"></div>
				</div>
			</div>

			<div class="action-buttons">
				<button class="btn btn-cart">Add To Cart</button>
				<button class="btn btn-buy">Buy It Now</button>
			</div>
		</div>

		<div class="product-gallery">
			<div class="main-image">
				<img src="{{ base_path ~ directory }}/images/litter-robot-main.jpg" alt="Litter-Robot Self-Cleaning">
			</div>
			<div class="thumbnail-container">
				<div class="thumbnail active">
					<img src="{{ base_path ~ directory }}/images/litter-robot-thumb1.jpg" alt="Litter-Robot Self-Cleaning">
				</div>
				<div class="thumbnail">
					<img src="{{ base_path ~ directory }}/images/litter-robot-thumb2.jpg" alt="Litter-Robot with Cat">
				</div>
				<div class="thumbnail">
					<img src="{{ base_path ~ directory }}/images/litter-robot-thumb3.jpg" alt="Litter-Robot App Control">
				</div>
			</div>
		</div>
	</div>
</section>

