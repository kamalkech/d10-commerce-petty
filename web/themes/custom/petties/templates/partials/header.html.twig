<!-- Top bar -->
<div id="top-bar" class="top-bar">
  <div class="container">
    {% if page.header_top %}
      {{ page.header_top }}
    {% endif %}

    <div class="language-currency">
      {% if page.header_top_right %}
        {{ page.header_top_right }}
      {% endif %}
    </div>
  </div>
</div>

<!-- Header / Navigation -->
<header class="main-header">
	<div class="container">
    {% if page.header_bottom %}
      {{ page.header_bottom }}
    {% endif %}
		<div class="nav-right">
      {% if page.header_bottom_right %}
        {{ page.header_bottom_right }}
      {% endif %}
		</div>
	</div>
</header>
